<h1><%= "#{@photos.count} Photos by #{@user.first_name} #{@user.last_name}" %></h1>
<ul>
  <% for photo in @photos %>
    <li>
      <%= image_tag(photo.file_name) %> <br/>
      <%= "Photo created at #{photo.date_time}" %><br/>
      <% for comment in photo.comments %>
        <%= "Commented at #{comment.date_time}" %>
        <%= link_to("#{comment.user.first_name} #{comment.user.last_name}", action: :index, id: comment.user) %>
        <%= comment.comment %><br/>
      <% end %>
    </li>
  <% end %>
</ul>